  <script>
    /**
     * openPage(url)
     * - यदि URL पूर्ण (http/https) है -> नया टैब में खोलेगा
     * - यदि relative filename है (जैसे maize.html) -> उसी टैब में नेविगेट करेगा
     */
    function openPage(url) {
      try {
        if (typeof url !== 'string') return;
        const trimmed = url.trim();
        if (trimmed.startsWith('http://') || trimmed.startsWith('https://')) {
          // external link: open in new tab (blank) for safer UX
          window.open(trimmed, '_blank', 'noopener,noreferrer');
        } else {
          // internal relative page
          window.location.href = trimmed;
        }
      } catch (e) {
        console.error('openPage error:', e);
      }
    }
  </script>
